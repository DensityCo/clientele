{
  "variables": {
    "host": "https://clerk.density.io"
  },
  "resources": {
    "users": {
      "login": {
        "method": "POST",
        "url": "{{{host}}}/login/",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "email": "{{email}}",
          "password": "{{password}}"
        }
      },
      "me": {
        "method": "GET",
        "url": "{{{host}}}/me/"
      }
    }
  }
}
